{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "setup (functions)",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"venv",
				".venv"
			],
			"problemMatcher": []
		},
		{
			"label": "install dependencies (functions)",
			"type": "shell",
			"command": "pip",
			"args": [
				"install",
				"-r",
				"requirements.txt"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"dependsOn": "setup (functions)",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"type": "func",
			"command": "host start",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true,
			"dependsOn": "install dependencies (functions)",
			"problemMatcher": "$func-python-watch"
		}
	]
}